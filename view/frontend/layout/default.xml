<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block ifconfig="googleMap/setting/active" class="Excellence\Storelocator\Block\Index\Locatorlink" name="locator-link">
                <arguments>
                    <argument name="label" xsi:type="string">Store Locator</argument>
                    <argument name="path" xsi:type="string">storelocator</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="target" xsi:type="string">_blank</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>